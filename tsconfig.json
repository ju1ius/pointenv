{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "allowJs": false,
    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "lib/**/*",
    "node_modules"
  ],
  "ts-node": {
    "files": true
  }
}