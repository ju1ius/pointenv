{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": false,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
  ],
  "exclude": [
    "lib/**/*",
    "node_modules",
  ],
  "ts-node": {
    "files": true,
    "esm": true,
  }
}