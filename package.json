{
  "name": "@ju1ius/pointenv",
  "version": "0.1.0",
  "description": "Polyglot dotenv parser and evaluator.",
  "author": "ju1ius <jules.bernable@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ju1ius/pointenv.git"
  },
  "keywords": [
    "dotenv",
    "parser",
    "expansion",
    "shell",
    "variable",
    "posix"
  ],
  "engines": {
    "node": ">=18.0"
  },
  "type": "module",
  "main": "./dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js"
  },
  "types": "./dist/src/index.d.ts",
  "files": [
    "./dist/src/**/*.js",
    "./dist/src/**/*.d.ts"
  ],
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "build": "rm -rf dist && tsc",
    "watch": "rm -rf dist && tsc --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "preversion": "npm test",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "glob": "^8.1.0",
    "jest": "^29.4.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}